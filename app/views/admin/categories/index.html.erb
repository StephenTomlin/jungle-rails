<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">
      <%= form_tag do %>
        <input type="text" name="category"></input>
        <input type="submit" value="Create a new category"></input>
      <% end %>
      <tbody>
        <%= render @Categories %>
      </tbody>
    </table>

  </div>

</section>
